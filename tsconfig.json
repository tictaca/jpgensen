{
  "compilerOptions": {
	"target": "ES2015",
	"module": "commonjs",
	"outDir": "./dist",
	"strict": true,
    "noUnusedLocals": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
	"esModuleInterop": true,
	"resolveJsonModule": true
  },
  "exclude": [
	  "node_modules",
	  "**/*.test.ts"
  ]
}
